{
  "name": "blue-ocean-explorer",
  "version": "1.0.0",
  "description": "XavierOS - Blue Ocean Explorer",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "vinxi dev",
    "build": "NODE_ENV=production tsr generate && NODE_ENV=production vinxi build",
    "start": "vinxi start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . -c eslint.config.mjs --max-warnings 0",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@openrouter/ai-sdk-provider": "^0.0.3",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.62.8",
    "@tanstack/react-router": "^1.95.0",
    "@tanstack/router-plugin": "^1.95.0",
    "@tanstack/react-start": "^1.95.0",
    "@tanstack/zod-adapter": "^1.95.0",
    "@trpc/client": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@trpc/tanstack-react-query": "^11.0.0",
    "ai": "^4.0.0",
    "assert": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.13.3",
    "superjson": "^2.2.1",
    "vinxi": "^0.5.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.15",
    "@tanstack/router-cli": "^1.95.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.2",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
